<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".ui.MainActivity"
android:background="@drawable/ic_backgraound">

<ImageView
    android:id="@+id/weather_icon"
    android:layout_width="80dp"
    android:layout_height="80dp"
    android:src="@mipmap/ic_launcher"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.34"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintVertical_bias="0.10" />

<TextView
    android:id="@+id/tv_weather_gradus"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="25°"
    android:textColor="@color/white"
    android:textSize="80dp"
    android:layout_marginHorizontal="20dp"
    app:layout_constraintBottom_toBottomOf="@+id/weather_icon"
    app:layout_constraintStart_toEndOf="@+id/weather_icon"
    app:layout_constraintTop_toTopOf="@+id/weather_icon" />

<TextView
    android:id="@+id/tv_current_date"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Friday, 20 July, 13:50"
    android:textSize="25dp"
    android:textColor="@color/creamColor"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintVertical_bias="0.23000002" />

<TextView
    android:id="@+id/day_type"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Sunny Day"
    android:textSize="25dp"
    android:textColor="@color/creamColor"
    app:layout_constraintEnd_toEndOf="@+id/tv_current_date"
    app:layout_constraintStart_toStartOf="@+id/tv_current_date"
    app:layout_constraintTop_toBottomOf="@+id/tv_current_date" />

<LinearLayout
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="30dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintVertical_bias="0.37">

    <ImageView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:src="@drawable/ic_wind" />

    <ImageView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:src="@drawable/ic_drop_humidity" />
</LinearLayout>

<LinearLayout
    android:id="@+id/linearLayout2"
    android:layout_width="match_parent"
    android:layout_height="75dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/linearLayout"
    app:layout_constraintVertical_bias="0.050000012">

    <TextView
        android:id="@+id/tv_weather_wind"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:text="11"
        android:textColor="@color/white"
        android:textSize="60dp" />

    <TextView
        android:id="@+id/tv_weather_humidity"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:text="30"
        android:textColor="@color/white"
        android:textSize="60dp" />


</LinearLayout>

<LinearLayout
    android:id="@+id/linearLayout3"
    android:layout_width="match_parent"
    android:layout_height="30dp"
    app:layout_constraintTop_toBottomOf="@+id/linearLayout2">

    <TextView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:textColor="@color/creamColor"
        android:gravity="center_horizontal"
        android:text="WIND"
        android:textSize="25dp" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:text="HUMIDITY"
        android:textColor="@color/creamColor"
        android:textSize="25dp" />
</LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="120dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/linearLayout3"
    app:layout_constraintVertical_bias="0.26"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="TUE"
            android:textSize="20dp"
            android:textColor="@color/creamColor"
            android:gravity="center_horizontal"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="WED"
            android:textSize="20dp"
            android:textColor="@color/creamColor"
            android:gravity="center_horizontal"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="THU"
            android:textSize="20dp"
            android:textColor="@color/creamColor"
            android:gravity="center_horizontal"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="FRI"
            android:textSize="20dp"
            android:textColor="@color/creamColor"
            android:gravity="center_horizontal"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="SAT"
            android:textSize="20dp"
            android:textColor="@color/creamColor"
            android:gravity="center_horizontal"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="SUN"
            android:textSize="20dp"
            android:textColor="@color/creamColor"
            android:gravity="center_horizontal"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:layout_marginVertical="15dp">
        <ImageView
            android:id="@+id/img_wheather_tue"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@mipmap/ic_launcher"
            />
        <ImageView
            android:id="@+id/img_wheather_wed"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@mipmap/ic_launcher"
            />
        <ImageView
            android:id="@+id/img_wheather_thu"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@mipmap/ic_launcher"
            />
        <ImageView
            android:id="@+id/img_wheather_fri"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@mipmap/ic_launcher"
            />
        <ImageView
            android:id="@+id/img_wheather_sat"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@mipmap/ic_launcher"
            />
        <ImageView
            android:id="@+id/img_wheather_sun"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@mipmap/ic_launcher"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/tv_wheather_gradus_tue"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="22°"
            android:gravity="center_horizontal"
            android:textSize="25dp"
            android:textColor="@color/white"
            />
        <TextView
            android:id="@+id/tv_wheather_gradus_wed"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="15°"
            android:gravity="center_horizontal"
            android:textSize="25dp"
            android:textColor="@color/white"
            />
        <TextView
            android:id="@+id/tv_wheather_gradus_thu"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="12°"
            android:gravity="center_horizontal"
            android:textSize="25dp"
            android:textColor="@color/white"
            />
        <TextView
            android:id="@+id/tv_wheather_gradus_fri"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="19°"
            android:gravity="center_horizontal"
            android:textSize="25dp"
            android:textColor="@color/white"
            />
        <TextView
            android:id="@+id/tv_wheather_gradus_sat"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="4°"
            android:gravity="center_horizontal"
            android:textSize="25dp"
            android:textColor="@color/white"
            />
        <TextView
            android:id="@+id/tv_wheather_gradus_sun"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="-2°"
            android:gravity="center_horizontal"
            android:textSize="25dp"
            android:textColor="@color/white"
            />
    </LinearLayout>
</LinearLayout>


<TextView
    android:id="@+id/network_type"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:text="Ofllayn"
    android:textColor="@color/white"
    android:textSize="25dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintVertical_bias="0.92" />

</androidx.constraintlayout.widget.ConstraintLayout>